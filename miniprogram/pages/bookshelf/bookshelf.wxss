.bookshelf-page {
  position: relative;
}

.bookshelf-page .scroll-view {
  height: 100vh;
}

.bookshelf-page .container {
  padding: 20rpx;
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  grid-row-gap: 30rpx;
  justify-items: center;

}

.action-panel {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  margin: auto;
  z-index: 999;
  background-color: rgba(0, 0, 0, .4);
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.action-panel .box {
  width: 60%;
  background-color: #000;
  box-shadow: 0 2px 4px rgba(0, 0, 0, .24), 0 0 6px rgba(0, 0, 0, .04);
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.action-panel .box .book-info {
  /* display: flex;
  flex-direction: column; */
  overflow: hidden;
}

.action-panel .box .book-info .book-image {
  display: flex;
}

.action-panel .box .book-info .book-image .image {
  width: 168rpx;
  height: 242rpx;
  object-fit: cover;
}

.action-panel .box .book-info .book-image .book-author {
  flex: 1;
  display: flex;
  width: 60%;
  flex-direction: column;
  justify-content: space-around;
  margin: 0 20rpx;
  border-bottom: 1px dashed #aaa;

}

.action-panel .box .book-info .book-image .book-author .book-name {
  font-size: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  color: #fff;
}


.action-panel .box .book-info .book-image .book-author .author-text {
  font-size: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  color: #0097ff;
}

.action-panel .box .book-info .introduction {
  /* flex: 1; */
  height: 160rpx;
  text-indent: 28rpx;
  font-size: 28rpx;
  color: #ccc;
  margin: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 5;
  line-height: 32rpx;

}

.action-panel .box .text {
  color: red;
  height: 40px;
  border: 1px solid #fff;
  text-align: center;
  background-color: #fff;
  line-height: 40px;
}


.action-panel .close {
  margin-top: 20%;
}